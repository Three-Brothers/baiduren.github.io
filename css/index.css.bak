 .all {
  width: 1000px;
  height: 354.16px;
  margin: 16px auto;
  /* padding: 1px; */
  border: 1px solid #ccc;
  position: relative;
 }
 .inner {
  position: relative;
  width: 1000px;
  height: 354.16px;
  background-color: pink;
  overflow: hidden;
 }
 .inner ul {
  width: 1000%;
  list-style: none;
  position: absolute;
  top: 0;
  left: 0;
 }
 .inner ul img {
	width: 1000px;
 }
 .inner ul li {
  float: left;
 }
 .inner ol {
  position: absolute;
  right:404px;
  bottom: 10px;
  z-index: 1;
 }
 .inner ol li {
  width: 22px;
  display: inline-block;
  height: 22px;
  margin: 0 8px;
  cursor: pointer;
  line-height: 22px;
  text-align: center;
  background: #fff;
  border-radius: 50%;
  border: 1px solid #fff;
 }
 /*��ǰ�ĸ�����СԲ��*/
.current::before {
  content: "";
  display: block;
  clear: both;
  color: #fff;
  width: 32px;
  height: 32px;
  border-radius: 50%;
  position: absolute;
  top: -5px;
  margin-left: -5px;
  /* background: rgba(255,255,255,.2); */
  border: 1px solid #fff;
 }
 /* ���㰴ť�ĺ��� */
 .focusD {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  display: none;
 }
 /* ���еĽ��㰴ť����ʽ */
 .focusD span {
  display: inline-block;
  width: 30px;
  font-size: 24px;
  height: 30px;
  color: #000;
  line-height: 30px;
  text-align: center;
  background: rgba(255, 255, 255, 0.4);
  cursor: pointer;
  position: absolute;
  top: 50%;
  margin-top: -15px;
  z-index: 2;
 }
