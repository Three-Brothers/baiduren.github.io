	transition: all 0.4s;
	cursor: pointer;
	border: 1px solid #999;
}
.show li a {
	text-decoration: none;
}
.service .show li:nth-child(2) {
	top: 0;
	left: 347px;
}
.service .show li:nth-child(3) {
	top: 0;
	left: 678px;
}
.service .show li:nth-child(4) {
	top: 238px;
	left: 18px;
}
.service .show li:nth-child(5) {
	top: 238px;
	left: 347px;
}
.service .show li:nth-child(6) {
	top: 238px;
	left: 678px;
}
.show li h2 {
	font-size: 20px;
	font-weight: 600;
	text-align: center;
	margin: 48px 0 18px;
}
.show li h3 {
	font-size: 16px;
	font-weight: 400;
	text-align: center;
	line-height: 32px;
}
.show li img {
	position: relative;
	top: -190px;
	left: 18px;
}
.show li:hover {
	box-shadow: 0 2px 10px #ccc; /* ������������Ӱ */
	transform: translateY(-22px);
	border: 1px solid #ccc;
	margin: 0;
	padding: 0;
}

.service .bottom {
	width: 200px;
	height: 38px;
	position: relative;
	bottom: -86px;
	left: 0;
	margin: auto;
}
.service .bottom a {
	width: 100%;
	height: 100%;
	display: block;
