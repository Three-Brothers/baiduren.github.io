/* 国开详细专属样式 */
.xinxi {
	width: 1000px;
	margin: 10px auto 0;
	/* border:1px solid blue; */
}
.xinxi::after {	/* 在某元素后面插入伪元素-清除浮动 */
	content:"";	/* 必须条件 */
	display: block;		/* 切换元素为块 */
	height: 0;	/* 高度 */
	overflow: hidden;	/* 溢出隐藏 */
}
/* 放置一张顶部照片 */
.xinxi a  {
	width: 100%;
	height: 244px;
	overflow: hidden;
	display: block;
}
.xinxi #xin {
	/* height: 26px; */
	display: inline;
}
.xinxi #book {
	height: 28px;
}

.xinxi a img {
	width: 1000px;
}
#xxw {
	display: inline;
}

